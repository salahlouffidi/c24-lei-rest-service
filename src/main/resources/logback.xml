<configuration scan="true" scanPeriod="10 seconds">

    <property name="LOG_PATH" value="logs" />

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %n
            </Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
    </appender>

    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/app.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <FileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</FileNamePattern>

            <!-- keep 100 days' worth of history -->
            <maxHistory>100</maxHistory>
        </rollingPolicy>

        <encoder>
            <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
        </encoder>
    </appender>

    <!--<root level="DEBUG">-->
        <!--<appender-ref ref="consoleAppender"/>-->
    <!--</root>-->

    <logger name="biz.c24.io" level="INFO">
        <appender-ref ref="consoleAppender" additivity="false"/>
    </logger>

    <logger name="org.springframework.integration.handler.LoggingHandler" level="INFO">
        <!--<appender-ref ref="dailyRollingFileAppender"/>-->
        <appender-ref ref="consoleAppender"/>
    </logger>
    <logger name="org.springframework.integration" level="INFO" additivity="false">
        <appender-ref ref="consoleAppender"/>
    </logger>

    <logger name="messageLogger" level="INFO">
        <appender-ref ref="consoleAppender" additivity="false"/>
    </logger>

</configuration>
